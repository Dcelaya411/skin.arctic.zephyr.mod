<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="106">
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <origin x="0" y="0"/>
    </coordinates>
    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <include>Animation.ZoomIn</include>
            <include>Animation.FadeOut</include>
            <centertop>50%</centertop>
            <centerleft>50%</centerleft>
            <include content="def_width" condition="$EXP[ShowExtendedContextMenu]">
                <param name="width" value="966" />
            </include>
            <width>466</width>
            <height>817</height>    
            <control type="image">
                <visible>$EXP[ShowExtendedContextMenu]</visible>
                <posx>8</posx>
                <top>-15</top>
                <posy>-16</posy>
                <width>950</width>
                <height>817</height>
                <texture border="16" colordiffuse="White100">common/box.png</texture>
            </control>
            <control type="image" id="999">
                <visible>!$EXP[ShowExtendedContextMenu]</visible>
                <posx>8</posx>
                <top>-15</top>
                <posy>-16</posy>
                <width>450</width>
                <height>817</height>
                <texture border="16" colordiffuse="White100">common/box.png</texture>
            </control>
            <control type="group">
                <left>22</left>
                <top>0</top>
                <control type="label">
                    <description>Header Label</description>
                    <left>70</left>
                    <width>1000</width>
                    <posy>0</posy>
                    <include>FontTop</include>
                    <textcolor>Dark2</textcolor>
                    <label>10106</label>
                </control>
                <include>Kodi_Logo</include>

                <!-- Lines -->
                <control type="image">
                    <top>70</top>
                    <left>17</left>
                    <include content="def_width" condition="$EXP[ShowExtendedContextMenu]">
                        <param name="width" value="410" />
                    </include>
                    <width>385</width>
                    <height>1</height>
                    <bottom>10</bottom>
                    <colordiffuse>Black12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>
                <control type="image">  
                    <visible>$EXP[ShowExtendedContextMenu]</visible>
                    <top>90</top>
                    <left>454</left>
                    <width>1</width>
                    <height>642</height>
                    <bottom>10</bottom>
                    <colordiffuse>Black12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>
            </control>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="996"/>
                <param name="left" value="8"/>
                <param name="top" value="90"/>
                <param name="width" value="450"/>
            </include>
            
            <control type="button" id="5050">
                <include>HiddenButton</include>
                <onright>996</onright>
                <onleft>996</onleft>
                <onback>996</onback>
                <onfocus>SetProperty(contextplot,1,home)</onfocus> 
                <onunfocus>ClearProperty(contextplot,home)</onunfocus>   
            </control>
            
            <control type="grouplist" id="996">
                <animation condition="Control.HasFocus(5050)" effect="fade" end="0" start="100" time="250">Conditional</animation>
                <description>grouplist for context buttons</description>
                <posx>8</posx>
                <posy>0</posy>
                <width>510</width>
                <top>90</top>
                <onleft>5050</onleft>
                <height max="700">auto</height>
                <itemgap>0</itemgap>
                <scrolltime>0</scrolltime>
                <control type="button" id="1000">
                    <description>Buttons</description>
                    <include>DefContextButtonGradient</include>
                    <align>left</align>
                </control>
            </control>
            
            <control type="textbox">
                <animation effect="fade" end="100" start="0" time="250" delay="300">Visible</animation>
                <visible>Control.hasFocus(5050)</visible>
                <top>85</top>
                <left>38</left>
                <width>410</width>
                <height max="640">auto</height>
                <font>Tiny</font>
                <textcolor>Dark2</textcolor>
                <align>left</align>
                <label fallback="19055">$VAR[LabelPlotContextMenu]</label>
            </control>
            
            

            
            
            <control type="group" description="Poster">
                <visible>$EXP[ShowExtendedContextMenu]</visible>
                <left>495</left>
                <top>90</top>
                <control type="image">
                    <width>PosterW</width>
                    <fadetime>PosterFanartFadetime</fadetime>
                    <aspectratio align="center" aligny="top" scalediffuse="false">keep</aspectratio>
                    <texture background="true">$VAR[PosterImageContextMenu]</texture>
                </control>
            </control>
        </control>
    </controls>
</window>
